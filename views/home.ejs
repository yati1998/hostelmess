	<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
</head>
<body class="tm-gray-bg">
	<!-- Header -->
	<div class="tm-header">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 col-md-4 col-sm-3 tm-site-name-container">
					<a href="#" class="tm-site-name"><%- hos %></a>	
				</div>
				<div class="col-lg-6 col-md-8 col-sm-9">
					<div class="mobile-menu-icon">
						<i class="fa fa-bars"></i>
					</div>
					<nav class="tm-nav"  style="margin-left: -100px;">
						<ul>
							<li><a href="home" class="active">Home</a></li>
							<li><a href="issues">Issues</a></li>
							<li><a href="contacts">Contacts</a></li>
							<li><a href="profile">Profile</a></li>
							<li><a href="logout">Logout</a></li>
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</div>
	<form id="p02" name="status">
		<center>
		<h1>MEAL STATUS</h1>
		CURRENT AMOUNT:
		<div style="width: 80px;height: 30px;border: double;">Rs.<%- details.amount %></div>
		<br><br>
		<p> <%- mes %> </p>
		YOUR STATUS FOR TOMORROW:
		 <p id="para" name="meal status" rows="5" cols="20" placeholder="your status">Breakfast:<%- bs %></p>
		 <p id="para" name="meal status" rows="5" cols="20" placeholder="your status">Lunch:<%- ls %></p>
		 <p id="para" name="meal status" rows="5" cols="20" placeholder="your status">Dinner:<%- ds %></p>
		</center>
	</form>
	<section class="container tm-home-section-1" id="more" style="position: absolute; top: 50%; left: 35%;">
		<div class="row">
			<div class="col-lg-4 col-md-4 col-sm-6">
				<!-- Nav tabs -->
				<div class="form-group tm-yellow-gradient-bg text-center"> 
					<h3><span style="position: absolute; left: 70px;top: 30px;">Cancel next day's meal</span></h3>
				</div> 

				<!-- Tab panes -->
				<div class="tab-content" text-align="text-center">
					<div role="tabpanel" class="tab-pane fade in active tm-white-bg" id="hotel">
						<div class="tm-search-box effect2">
							<form action="/cancel" method="post" class="hotel-search-form">
								<div class="tm-form-inner">
									<ol>
										<li>
											<label class="container">Breakfast
									 			<input name="breakfast" type="checkbox">
												<span class="checkmark"></span>
											</label>
										</li>
							 			<li>
											<label class="container">Lunch
									 			<input name="lunch" type="checkbox" >
												<span class="checkmark"></span>
											</label>
							 			</li>
							 			<li>
										<label class="container">Dinner
							 				<input name="dinner" type="checkbox">
											<span class="checkmark"></span>
										</label>
										</li>

									</ol>
								</div>			
									<div class="form-group tm-yellow-gradient-bg text-center">
									 	<button type="submit" name="submit" class="tm-yellow-btn" style="font-size: 20px;">SUBMIT</button>
									</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
 </body>
 </html>
